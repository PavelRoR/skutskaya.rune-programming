#for
	padding: 50px 0
	background-color: #551E6E
	background-image url(../img/usefull_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.for_subtitle
	font-size: 22px
	font-family: 'OpenSansBold', sans-serif
	color #ede3f4
	margin 30px 0
	text-align: center
.for_list
	width 100%
	max-width 500px
	margin 0 auto 25px
	background-color: #DCCAE2
	background-image url(../img/usefull_img_6.png)
	background-repeat no-repeat
	background-position: center
	background-size: auto
	display table
	padding 20px
	border-radius: 20px;
	box-shadow: 5px 5px 0px 0px rgba(214, 201, 224, 0.45);
	li
		color: rgb(45, 34, 51);
		line-height: 1.5;
		margin-bottom: 10px
		position relative
		padding-left: 25px
		list-style: none
		&:before
			content ''
			display block
			position: absolute;
			width: 8px;
			height: 8px;
			border-radius: 50px
			background-color: #00222B
			top 8px
			left 0
		&:last-child
			margin-bottom: 0