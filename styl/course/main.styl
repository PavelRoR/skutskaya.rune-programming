#main
	padding 50px 0
	background-color: #511C6B
	background-image url(../img/get_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
.pre
	font-size: 18px;
	font-family: "OpenSansBold", sans-serif;
	color: #fff
	margin-bottom: 20px
.main_title
	font-size: 32px;
	font-family: "OpenSansExtraBold", sans-serif;
	color: #d6c9e0
	text-transform: uppercase;
	line-height: 1.3;
	margin 0 0 10px
	small
		display block
		font-size: 60%
		font-family: "OpenSans", sans-serif;
		text-transform: none
		margin-bottom: 10px
.main_subtitle
	font-size: 26px;
	font-family: "OpenSansBold", sans-serif;
	color: #d6c9e0
	line-height: 1.3;
	margin-bottom: 40px
.main_text
	font-size: 20px
	color: #fff
	margin-top: 10px
	span
		font-family: "OpenSansBold", sans-serif;
		display: inline-block
	&:last-of-type
		margin-bottom: 50px