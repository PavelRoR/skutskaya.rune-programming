@media screen and (min-width 2295px)
	body
	.plan_packet_subtitle
	.get_packet_text
	.packet_body_title
		font-size: 20px
	.container
		width 1400px
	.button 
		max-width 300px
	.plan_tabs
		max-width 1100px
	.get_packet
		width 1100px
	.more_button
		font-size: 16px
	.packet_body
		min-height 164px
	.modal_list li
		font-size: 18px
	footer p
	#conditions
		font-size: 16px
@media screen and (max-width 1199px)
	#logo
		width 200px
	.contacts
		line-height: 28px
	.get_packet
		float: none
		margin-left: auto
		margin-right: auto
		width 100%
		max-width 900px
	.modal-dialog
		max-width 100%
		width 90%
@media screen and (max-width 991px)
	#logo
		display block
		float: none
		margin 0 auto
	.contacts
		float: none
		line-height: 16px
		text-align: center
	.contact
		margin 5px 5px 0
		display: inline-block
		span
			padding-left: 5px
	#main
	#plan
	#get
	#prices
	#feedback
		padding 40px 0
	#tasks
		padding 40px 0 0
	.get_packet_title
		position: static
		margin-bottom: 10px
	.packet_body
		min-height 190px
	footer p br
		display: none
@media screen and (max-width 767px)
	.plan_tabs_buttons li
		max-width 120px
		&:nth-child(2)
			margin 0 10px
	.get_packet_title
		font-size: 50px
		line-height: 50px
	.packet_body
		min-height 1px
	#vk
		margin-bottom: 25px
	.modal-dialog
		margin 10px auto
@media screen and (max-width 485px)
	#logo
		width 180px
	.contacts
		line-height: 14px
	.contact
		font-size: 12px
	.general_title
		margin-bottom: 30px
	#main
	#plan
	#get
	#prices
	#feedback
		padding 30px 0
	#tasks
		padding 30px 0 0
	.main_title
		font-size: 28px
