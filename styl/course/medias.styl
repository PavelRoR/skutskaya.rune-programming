	.main_text:last-of-type
	.plan_tabs
		margin-bottom: 30px
	.plan_tabs_buttons
		margin-bottom:  0
		li
			margin: 0 0 10px
			font-size: 16px
			max-width 80px
			&:nth-child(2)
				margin: 0 3px 10px
	.plan_packet
	.get_packet
	.days_container
		padding 15px
	.get_packet_title
		font-size: 40px
		line-height: 40px
	.get_packet_list li
		padding-left: 15px
