		font-size: 18px
	.timer_title
		font-size: 26px
		margin-top: 20px
	.general_title_recs
		margin-top: 30px
		margin-bottom: 20px
	.garants
		margin-top: 30px
		padding 15px
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 30px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.days_buttons li
		font-size: 16px
		max-width 85px
	.days_buttons li:nth-child(2)
		margin 0 10px
	.soc_buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
	.modal_title
		font-size: 20px
	.modal_subtitle
		font-size: 18px
	.get_packet_text
		line-height: 1.3
	.days_buttons
		font-size: 18px
		margin-bottom: 0
		li
			margin 0 0 10px
			max-width 80px
			&:nth-child(2)
				margin 0 3px 10px
