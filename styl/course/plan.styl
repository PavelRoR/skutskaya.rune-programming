#plan
	padding 50px 0
	background-color: #BDACBC
	background-image url(../img/plan_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.plan_tabs
	width 100%
	max-width: 900px;
	margin 0 auto 40px

.plan_tabs_buttons
	width 100%
	text-align: center
	margin-bottom: 20px
	li
		display: inline-block
		cursor pointer
		border-radius: 20px
		font-size: 20px
		width 100%
		max-width 150px
		height 45px
		line-height 43px
		background-color: #47075E
		color #D6C8AD
		transition: all .3s ease-out
		border 1px solid #47075E
		&:nth-child(2)
			margin 0 15px
		&:hover
			border 1px solid #47075E
			background-color: #D6C8AD
			color #47075E
			font-family: "OpenSansBold", sans-serif;
	.active
		border 1px solid #47075E
		background-color: #D6C8AD
		color #47075E
		font-family: "OpenSansBold", sans-serif;
.plan_container
	border: 1px solid rgb(62, 37, 28);
	border-radius: 20px;
	background-color: rgba(234, 216, 248, .4);
.plan_packet
	padding 25px
.plan_packet_title
	font-size: 24px;
	font-family: "OpenSansExtraBold", sans-serif;
	color: rgba(45, 34, 51, 0.5);
	text-align: center
.plan_packet_subtitle
	font-family: "OpenSansBold", sans-serif;
	color: rgb(45, 34, 51);
	line-height: 1.5;
	margin:10px 0 20px
	font-size: 18px
	text-align: center
.plan_packet_list
	li
		color: rgb(45, 34, 51);
		line-height: 1.3;
		margin-bottom: 10px
		position relative
		padding-left: 15px
		list-style: none
		&:before
			content ''
			display block
			position: absolute;
			width: 8px;
			height: 8px;
			border-radius: 50px
			background-color: #00222B
			top 7px
			left 0
		&:last-child
			margin-bottom: 0
.plan_container_bonus
	margin-top: 10px
	span
		font-size: 18px
		font-family: "OpenSansBold", sans-serif;
		color #4a175e
		display block
		margin-bottom: 5px