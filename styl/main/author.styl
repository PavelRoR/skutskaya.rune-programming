#author
	padding 50px 0
#anna_img
	border-radius: 28px
	float left
	width: 244px;
	height: 244px;
	box-shadow: 5px 5px 0px 0px #4a175e
	background-image url(../img/anna.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	margin-right: 100px
.author_info_title
	font-size: 24px;
	font-family: "OpenSansBold", sans-serif;
	color: rgb(74, 23, 94);
	line-height: 1.1
	padding 30px 0 20px
.author_info
	float left
.author_info_list
	li
		color: rgb(45, 34, 51);
		line-height: 1.5;
		position relative
		padding-left: 25px
		list-style: none
		margin-bottom: 5px
		&:last-child
			margin-bottom: 0
		&:before
			content ''
			display block
			position: absolute;
			width: 8px;
			height: 8px;
			border-radius: 50px
			background-color: #2D1C30
			top 8px
			left 0
