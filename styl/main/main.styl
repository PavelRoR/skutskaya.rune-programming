#main
	padding 40px 0 25px
	background-color: rgb(218,204,229)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	text-align: center
.pre
	font-size: 18px;
	font-family: "OpenSansBold", sans-serif;
	color: rgb(74, 23, 94);
.main_title
	font-size: 32px;
	font-family: "OpenSansExtraBold", sans-serif;
	color: rgb(74, 23, 94);
	text-transform: uppercase;
	line-height: 1.3;
	margin 10px 0 20px
.main_info
	p
		display: inline-block
		font-size: 16px;
		font-family: "OpenSansBold", sans-serif;
		color: rgb(74, 23, 94);
		span
			display: inline-block
		&:first-of-type
			&:after
				content: '|'
				display: inline-block
				margin 0 15px
.video_wrapper_main
	margin 20px auto 0
	max-width 370px