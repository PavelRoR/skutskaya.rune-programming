#mail_section
	padding 35px 0
	background-color: #4a175e
	position relative
	&:before
	&:after
		content ''
		display block
		width 100%
		height 2px
		background-color: rgb(220,202,226)
		position: absolute
		left 0
		right 0
		margin 0 auto
	&:before
		top 9px
	&:after
		bottom 9px
.mail_section_title
	font-size: 24px;
	font-family: "OpenSansBold", sans-serif;
	color: rgb(237, 227, 244);
	line-height: 27px
	margin-top: 15px
	small
		display block
		font-size: 18px
.mail_section_form
	margin 0 auto
	width 100%
	max-width 455px
.form_wrapper
	border-radius: 20px
	overflow hidden
	background-color #fff
.email
	height: 54px;
	line-height: 54px;
	border-radius: 20px
	font-size: 18px;
	font-family: "OpenSansBold", sans-serif;
	border none
	color: #4b1967
	text-align: left;
	text-indent: 20px
	width: 245px
	float: left
@-webkit-keyframes autofill {
	to {
		color: #4b1967;
		background: #fff;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
}
.button_mail
	float: right
	width 206px
	font-size: 24px
	font-family: "OpenSansBold", sans-serif;
	text-transform: uppercase
.alert_message {
	display: none;
	text-align: center;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
}
.checking {
	display: table;
	width 100%
	// max-width 500px
	margin: 10px auto 0;
	text-align: left
}

.checking .check_label {
	color: #eee
	line-height: 20px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 25px;
	text-align: left;
	font-size: 12px
}

.checking .check_label a {
	color: #eee
	border-bottom: 1px dashed
	display: inline
	text-decoration: none
}

.checking .check_label:before {
	content: '';
	background-color: rgba(0,0,0,.7);
	position: absolute;
	left: 0;
	top: 0;
	width: 20px;
	height: 20px;
	border none
	border-radius: 3px
}

.checking .check_label:after {
	content: '';
	position: absolute;
	left: 7px;
	top: -10px;
	width: 7px;
	height: 11px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 3px solid #fff
	border-right: 3px solid #fff
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check_label:before {
	background-color: rgb(0,86,194)

}

.check:checked + .check_label:after {
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}