#main
	padding 50px 0
	background-color: #511C6B
	background-image url(../img/get_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
.pre
	font-size: 18px;
	font-family: "OpenSansBold", sans-serif;
	color: #d6c9e0
.main_title
	font-size: 32px;
	font-family: "OpenSansExtraBold", sans-serif;
	color: #d6c9e0
	text-transform: uppercase;
	line-height: 1.3;
	margin 20px 0 30px
.main_text
	font-family: "OpenSansBold", sans-serif;
	color: #fff
	span
		display: inline-block
.video_wrapper_main
	margin 20px auto 0
	max-width 560px
#main.remind
	min-height calc(100vh - 242px)
.remind_main_title
	a
		display: inline-block
		text-decoration: underline
		&:focus
			color #fff
			text-decoration: none
		&:hover
			color #fff
			text-decoration: none
.remind_main_subtitle
	color #d6c9e0
	font-size: 26px
	font-family: "OpenSansBold", sans-serif;